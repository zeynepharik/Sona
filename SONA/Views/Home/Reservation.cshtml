@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SONA</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                    <a href="#" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Discover the perfect balance of hospitality, luxury, and comfort with our hotel booking services.
                    </p>
                    <a href="#" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="booking-form">
                    <h3>Book Your Stay</h3>
                    <form asp-action="Search" method="post">
                        <div class="form-group">
                            <label for="CheckInDate">Check-In Date:</label>
                            <input type="date" id="CheckInDate" name="checkInDate" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="CheckOutDate">Check-Out Date:</label>
                            <input type="date" id="CheckOutDate" name="checkOutDate" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="NumberOfGuests">Number of Guests:</label>
                            <input type="number" id="NumberOfGuests" name="guests" class="form-control" min="1" required />
                        </div>
                        <div class="form-group">
                            <label for="RoomCount">Number of Rooms:</label>
                            <input type="number" id="RoomCount" name="roomCount" class="form-control" min="1" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Search Rooms</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="img/hero/hero-3.jpg"></div>
    </div>
</section>


@if (Model.RoomTypes != null && Model.RoomTypes.Any())
{
    <section class="hp-room-section">
        <div class="container-fluid">
            <div class="hp-room-items">
                <div class="row">
                    @foreach (var roomType in Model.RoomTypes)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="hp-room-item set-bg" data-setbg="img/room/@roomType.ImageFile">
                                <div class="hr-text">
                                    <h3>@roomType.TypeName</h3>
                                    <h2>@roomType.Price$<span>/Per night</span></h2>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">Size:</td>
                                                <td>@roomType.Size</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Capacity:</td>
                                                <td>Max person @roomType.Capacity</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Bed:</td>
                                                <td>@roomType.BedType</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Services:</td>
                                                <td>@roomType.Services</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a href="/Reservation/Book?roomTypeId=@roomType.RoomTypeId" class="primary-btn">Book</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}

